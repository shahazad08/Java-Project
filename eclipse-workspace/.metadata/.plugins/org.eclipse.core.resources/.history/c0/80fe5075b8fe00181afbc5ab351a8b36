package com.shahazadproject.utilities;
import java.util.*;
public class Utility {
	int c;
	public int add(int a, int b) {
		c=a+b;
		return c;
		// TODO Auto-generated method stub
		
	}
	public int sub(int a,int b)
	{
		c=a-b;
		return c;
	}
	public String name(String uname)
	{
		String a = uname;
		return a;
		//System.out.println("Name is" +a);
		
			
	}
//////////////////////////////////////////////////////////////////////////
//1. User Input
	public static void nm(String u_name)
	{
		//String s=u_name;
		if(u_name.length()<=3)
		{
			System.out.println("The Name is" +u_name);
		}
		else
		{
			System.out.println("Wrong Input");
		}
	}
	
///////////////////////////////////////////////////////////////////////////
//3. Leap Year
	public static void yr(long yr1)
	{
		if((yr1%4==0 || yr1%400==0) && ((yr1%100!=0)))
		{
			System.out.println("The Given year is a leap year");
		}
		else
		{
			System.out.println("The Given year is not a leap year");
		}
	}
	
	
//********************************************************************//
//4. Power of 2
	
	public void power(int n) {
		int mul=2,i;
		if(n<31)
		for(i=1;i<=n;i++)
		{
			System.out.println(Math.pow(mul,i));
		}
		else
			
		{
			System.out.println("Overflows an Integer");
		}
			
		
	//	System.out.println(a);
		
	}
		// TODO Auto-generated method stub
		
	
/**********************************************************************
 * 5. Harmonic Mean
 * 
 */
private static double harmonicMean(int[] num, int[] freq, int n) {
	float sum=0,freq_sum=0;
	int i;
	for(i=0;i<n;i++)
	{
		sum=sum+(float)freq[i]/num[1];
		freq_sum=freq_sum+freq[i];
		
	}
	
	// TODO Auto-generated method stub
	return (freq_sum/sum);
}
}

	
	
	
		

	

